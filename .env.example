# Open Pet Food Facts API Configuration
# Base URL for the Open Pet Food Facts API
NEXT_PUBLIC_OPENPETFOOD_API_URL=https://world.openpetfoodfacts.org

# API Cache Configuration (in seconds)
OPENPETFOOD_CACHE_TTL=3600

# API Rate Limiting (requests per minute)
OPENPETFOOD_RATE_LIMIT=60

# Enable/Disable API Caching
OPENPETFOOD_ENABLE_CACHE=true

# Fallback to mock data if API fails
OPENPETFOOD_FALLBACK_ENABLED=false

# Database Configuration - MongoDB Atlas
# Get your connection string from: https://cloud.mongodb.com/
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/petportions?retryWrites=true&w=majority"

# Redis Configuration (optional, for distributed caching)
REDIS_URL=redis://localhost:6379

# API Monitoring and Logging
ENABLE_API_LOGGING=true
LOG_LEVEL=info

